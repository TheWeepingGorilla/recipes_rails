<h1><%= @tag.name %></h1>

<h2>Recipes:</h2>

<ul>
  <% @tag.recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>

<a href="/tags/<%= @tag.id %>"
   data-confirm="You sure?"
   data-method="delete"
   rel="nofollow">Delete</a>

 <a href="/tags/<%= @tag.id %>/edit">Edit Tag</a>
