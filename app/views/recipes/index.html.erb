<h1>Recipes</h1>

<ul>
  <% @recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>

<a href="/recipes/new">Add Recipe</a>

<a href="/tags">Tag Menu</a>

<a href="/recipes/fresh">Sort by Freshness</a>

<p>
  <form action = '/', method = "post">
    <label for="search_string">Search String</label>
    <input id="search_string" name="search[string]" type="text">
  </form>
</p>
