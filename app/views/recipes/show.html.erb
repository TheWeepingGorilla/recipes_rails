<h1>Recipe Detail</h1>

<ul>
  <li><%= @recipe.name %></li>
  <li><%= @recipe.instructions %></li>
  <li><%= @recipe.rating %></li>
  <li><%= @recipe.date %></li>
  <%= @recipe.tags.each do |tag| %>
  <li><% tag.name %></li>
  <% end %>

</ul>

<a href="/recipes/<%= @recipe.id %>"
   data-confirm="You sure?"
   data-method="delete"
   rel="nofollow">Delete</a>

 <a href="/recipes/<%= @recipe.id %>/edit">Edit Recipe</a>
